<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FileManagerActivity" android:orientation="vertical">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edtFileManager"/>
    <Button
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnSaveFileManager"/>
    <Button
            android:text="Read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnReadFileManager"/>
    <TextView
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/lblFileManager" android:layout_margin="15dp"
            android:textAlignment="center"/>
</LinearLayout>