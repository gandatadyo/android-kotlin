<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PicassoActivity" android:orientation="vertical">

    <Button
            android:text="show image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnPicasso"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:src="@tools:sample/avatars[0]" android:id="@+id/imgPicasso"
            android:scaleType="center"/>
</LinearLayout>