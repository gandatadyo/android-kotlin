<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ImageCropperActivity" android:orientation="vertical">

    <Button
            android:text="Cropper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnImageCopper"/>

    <Button
            android:text="Save to internal memory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnImageSave"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/imgCropper"/>
</LinearLayout>